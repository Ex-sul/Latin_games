#:kivy 1.0.9

<VerbLabel@Label>:
    text_size: self.size
    halign: "center"
    markup: True

<ConjugationGame>:
    FloatLayout:
        BoxLayout:
            orientation: 'vertical'
            padding: 20
            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: 0.75
                VerbLabel:
                    text: "[size=50]{}[/size]\n[size=45]{}[/size]".format(root.word1.principal_parts, root.word1.split_entry[-1])
                    valign: "middle"
                VerbLabel:
                    text: "[size=50]{}[/size]\n[size=45]{}[/size]".format(root.word2.principal_parts, root.word2.split_entry[-1])
                    valign: "middle"
                VerbLabel:
                    text: "[size=50]{}[/size]\n[size=45]{}[/size]".format(root.word3.principal_parts, root.word3.split_entry[-1])
                    valign: "middle"
            BoxLayout:
                orientation: 'horizontal'
                VerbLabel:
                    font_size: 70
                    text: root.word1_showing
                    valign: "top"
                VerbLabel:
                    font_size: 70
                    text: root.word2_showing
                    valign: "top"
                VerbLabel:
                    font_size: 70
                    text: root.word3_showing
                    valign: "top"
        Label:
            text: "Round {}\n{}".format(root.round, root.round_name)
            font_size: 30
            pos_hint: {'center_y': 0.95}
            halign: "center"



