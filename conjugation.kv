#:kivy 1.0.9

<VerbLabel@Label>:
    text_size: self.size
    halign: "center"


<ConjugationGame>:
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        BoxLayout:
            orientation: 'horizontal'
            BoxLayout:
                orientation: 'vertical'
                VerbLabel:
                    font_size: 40
                    text: root.word1.principal_parts
                    valign: "bottom"
                VerbLabel:
                    font_size: 45
                    text: root.word1.parsed_entry[-1]
                    valign: "top"
            BoxLayout:
                orientation: 'vertical'
                VerbLabel:
                    font_size: 40
                    text: root.word2.principal_parts
                    valign: "bottom"
                VerbLabel:
                    font_size: 45
                    text: root.word2.parsed_entry[-1]
                    valign: "top"
        BoxLayout:
            orientation: 'horizontal'
            VerbLabel:
                font_size: 70
                text: str(root.word1_showing)
                valign: "top"
            VerbLabel:
                font_size: 70
                text: str(root.word2_showing)
                valign: "top"



