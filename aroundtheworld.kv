#:kivy 1.0.9

<WordLabel@Label>:
    text_size: cm(20), self.height
    size: self.texture_size
    font_size: 70
    halign: 'center'

<AroundTheWorld>:
    BoxLayout:
        orientation: 'vertical'
        spacing: 20
        WordLabel:
            text: root.stem
            valign: 'bottom'
        WordLabel:
            text: root.answer
            valign: 'top'

